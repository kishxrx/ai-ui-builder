server {
    listen 80;

    location / {
        # Allow only traffic from Render's internal network
        allow ${NODE_SERVICE_HOST};
        deny all;

        proxy_pass http://${NODE_SERVICE_HOST}:${NODE_SERVICE_PORT};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}